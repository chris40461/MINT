# FastAPI 설정
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=INFO

# 데이터베이스
DATABASE_URL=sqlite:////app/data/mint.db
# PostgreSQL의 경우:
# DATABASE_URL=postgresql://user:password@localhost:5432/mint

# API Keys
GEMINI_API_KEY=your_gemini_api_key_here
DART_API_KEY=your_dart_api_key_here
KIS_APP_KEY=your_korea_investment_app_key
KIS_APP_SECRET=your_korea_investment_secret

# LLM 설정
GEMINI_MODEL=gemini-2.5-flash
GEMINI_MAX_TOKENS=65535
GEMINI_TEMPERATURE=0

# 스케줄러
SCHEDULER_ENABLED=true
MORNING_TRIGGER_TIME=09:10
AFTERNOON_TRIGGER_TIME=15:30
MORNING_REPORT_TIME=08:30
AFTERNOON_REPORT_TIME=15:40

# 필터링 임계값
MIN_TRADING_VALUE=500000000      # 5억원
MIN_MARKET_CAP=50000000000       # 500억원
VOLUME_SURGE_THRESHOLD=0.30      # 30%
GAP_UP_THRESHOLD=0.01            # 1%
INTRADAY_RISE_THRESHOLD=0.03     # 3%

# CORS 설정
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173

# 로깅
LOG_FILE=./data/logs/app.log

# 시크릿
SECRET_KEY=your-secret-key-here-change-in-production
